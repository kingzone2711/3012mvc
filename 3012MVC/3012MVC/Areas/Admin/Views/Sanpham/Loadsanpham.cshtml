
@{
	ViewBag.Title = "Loadsanpham";
}


<button type="button" class="btn btn-info btn-lg" id="myBtn">add</button>

<table class="table">
	<thead>
		<tr>
			<th>
				Tên
			</th>

			<th>
				Loại sản phẩm
			</th>
			<th>
				hãng sản xuất
			</th>
			<th>
				giá
			</th>
			<th>
				số lượng
			</th>

			<th>
				mô tả
			</th>
			<th>
				ảnh
			</th>
			<th>
				#
			</th>

		</tr>
	</thead>
	<tbody id="sp">
	</tbody>
</table>

<script id="teamplatesanpham" type="x-tpml-mustache">
	<tr>
		{{MASP}}
		<td>
			{{TENSP}}
		</td>

		<td>
			{{LOAISP}}
		</td>
		<td>
			{{HANGSX}}
		</td>
		<td>
			{{GIA}}
		</td>
		<td>
			{{SOLUONG}}
		</td>
		<td>
			{{MOTA}}
		</td>
		<td>
			{{ANHDAIDIEN}}
		</td>
		<td>
			<button class="btn btn-primary btn-edit" data-id="{{MASP}}"><i class="fa fa-edit"></i></button>

			<button class="btn btn-primary btn-danger" data-id="{{MASP}}"><i>delete</i></button>
		</td>
	</tr>
</script>
@section scripts{
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>

	<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/Scripts/plugin/mustache.min.js"></script>
	


}
<script>$(document).ready(function () {
	var sanpham = {
		init: function () {
			sanpham.loadsanpham();
			sanpham.events();
		},
		events: function () {
			$(document).on('click', '.btn-danger', function () {
				var MASP = $(this).data('id');
				sanpham.delete(MASP);
			})
		},
		delete: function (MASP) {
			$.ajax({
				url: '/Sanpham/deletesanpham',
				type: 'POST',
				data: { MASP: MASP },
				dataType: 'json',
				success: function (response) {
					if (response.status == true) {
						alert('xoa thanh cong');
						sanpham.loadsanpham();
					}

				}
			});
		},
		loadsanpham: function () {
			$.ajax({
				url: '/Sanpham/sanpham',
				type: 'GET',
				dataType: 'json',
				success: function (response) {
					if (response) {
						var data = response.data;
						var html = '';
						var template = $('#teamplatesanpham').html();
						$.each(data, function (i, item) {
							html += Mustache.render(template, {
								MASP: item.MASP,
								TENSP: item.TENSP,
								LOAISP: item.LOAISP,
								HANGSX: item.HANGSX,
								GIA: item.GIA,
								SOLUONG: item.SOLUONG,
								MOTA: item.MOTA,
								ANHDAIDIEN: item.ANHDAIDIEN

							});
						});
						$('#sp').html(html)
					}
				}
			});
		}
	}
	sanpham.init()
})</script>
